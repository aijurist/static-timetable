<?xml version="1.0" encoding="UTF-8"?>
<solver xmlns="https://www.optaplanner.org/xsd/solver" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://www.optaplanner.org/xsd/solver https://www.optaplanner.org/xsd/solver/solver.xsd">
    
    <!-- Domain model configuration -->
    <solutionClass>org.timetable.domain.TimetableProblem</solutionClass>
    <entityClass>org.timetable.domain.Lesson</entityClass>
    
    <!-- Score configuration -->
    <scoreDirectorFactory>
        <easyScoreCalculatorClass>org.timetable.solver.TimetableEasyScoreCalculator</easyScoreCalculatorClass>
    </scoreDirectorFactory>
    
    <!-- Optimization algorithms configuration -->
    <termination>
        <minutesSpentLimit>5</minutesSpentLimit>
    </termination>
    
    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
    </constructionHeuristic>
    
    <localSearch>
        <localSearchType>LATE_ACCEPTANCE</localSearchType>
    </localSearch>
</solver> 